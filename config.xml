<?xml version='1.0' encoding='utf-8' ?>
<widget id="io.cordova.hellocordova" version="0.2" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Di Memoria?</name>
    <description>
        Una aplicacion sencilla para almacenar notas
    </description>
    <author email="pedrothdc@pixelariumstudio.es" href="http://pthernandez.es">
        Pedro T.Hernandez
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>